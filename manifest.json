{
    "manifest_version": 3,
    "name": "csv-bibel-tools",
    "description": "Extension for the website 'csv-bibel.de'.",
    "host_permissions": ["https://*.csv-bibel.de/*"],
    "version": "1.0",
    "action": {
        //"default_icon": {
        //  "16": "assets/ext-icon.png",
        //  "24": "assets/ext-icon.png",
        //  "32": "assets/ext-icon.png"
        //},
        "default_title": "Markiere den gew√ºnschten Bibel text und gehe mit rechts Klick auf 'Auf bibelindex.de suchen'.",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs"],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["contentScript.js"]
        }
    ]
}